# Crawler API Keys
FIRECRAWL_API_KEY=fc-your-api-key-here
JINA_API_KEY=jina_your-api-key-here
SCRAPINGBEE_API_KEY=your-api-key-here
SCRAPERAPI_API_KEY=your-api-key-here

# LLM API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Paths
GROUND_TRUTH_PATH=verified_data.jsonl
OUTPUT_DIR=results

# Performance Settings
CRAWLER_TIMEOUT=60                      # Timeout in seconds per page request
CRAWLER_MAX_RETRIES=3                   # Number of retry attempts per page

# Rate Limiting (for local crawlers: Crawl4AI, CustomHTML)
# API-based crawlers (Firecrawl, Jina, ScrapingBee, ScraperAPI) ignore this setting
MIN_DELAY_BETWEEN_REQUESTS=1.0          # Minimum delay (seconds) between requests to same domain
                                        # Conservative: 2.0, Balanced: 1.0, Aggressive: 0.5

# Logging
LOG_LEVEL=INFO                          # DEBUG, INFO, WARNING, ERROR
